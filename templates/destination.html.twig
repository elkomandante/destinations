{% extends 'base.html.twig'%}

{% block main %}


    <div class = "row">
        <div class = "col-12">
            <div class = "destination-heading" id = "myHeader">
                <h2> Амстердам </h2>
            </div>
        </div>
    </div>

<div class = "container">
    <div class = "row">
        <div class = "col-md-12">
            <div class = "col-md-9">
               <div class = "section-background"> {{ destination.introText|raw }} </div>
                <div class="section-background">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="https://media.wired.com/photos/5aa2f3af0810d969021d9be4/master/pass/VaticanHackathon-HR9MMG-web.jpg" alt="Los Angeles" style="width:100%;">
                            </div>
                            <div class="item">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/d/d6/St_Peter%27s_Square%2C_Vatican_City_-_April_2007.jpg" alt="Chicago" style="width:100%;">
                            </div>
                        </div>
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"><i class="fas fa-chevron-left"></i></span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"><i class="fas fa-chevron-right"></i></span>
                        </a>
                    </div>
                </div>
                {{ destination.bottomText|raw }}
            </div>
            <div class = "col-md-3">
                <div class = "sidebar section-background places-near">
                    <h5 class = "nearby"> Дестинации во близина </h5>
                        {{ destination.closeDestinations|raw }}
                </div>
                <div class = "sidebar section-background">
                    <h5 class = "currency"> Валута </h5>
                    <i class="fas fa-euro-sign"></i> <span> {{ destination.currency|raw }} </span>
                </div>
                <div class = "sidebar section-background">
                    <h5 class = "facts">  Факти </h5>
                        {{ destination.facts|raw }}
                </div>
                <div class = "sidebar section-background">
                    <h5 class = "note"> Напомена </h5>
                        {{ destination.note|raw }}
                </div>
                <div class = "sidebar section-background">
                    <h5 class = "attachment"> Додаток </h5>
                </div>
            </div>
        </div>
    </div>
</div>
    <div class = "row">
        <div class = "col-md-12" style = "padding:0">
            <div id = "footer">
                <ul>
                    <li> <a href = "#"> Home &nbsp; :: &nbsp; </a> </li>
                    <li> <a href = "#"> Destinations &nbsp; :: &nbsp; </a> </li>
                    <li> <a href = "#"> Contact Us </a> </li>
                </ul>
                <p>Copyright @voyage. All Right Reserved.</p>
                <div class="arrow-up" onclick="topFunction()" id="myBtn"><i class="fas fa-arrow-up"></i></div>
            </div>
        </div>
    </div>
<script>
    window.onscroll = function() {myFunction()};
    function myFunction() {
        var header = document.getElementById("myHeader");
        var sticky = header.offsetTop;
        if (window.pageYOffset > sticky) {
            header.classList.add("sticky");
        } else {
            header.classList.remove("sticky");
        }
    }
</script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

{% endblock %}